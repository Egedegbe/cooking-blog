<% if(recipe != null ) { %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%- recipe.name %>
    </li>
  </ol>
  <div style="display: flex; justify-content: end">
    <a href="/edit_recipe/<%-recipe._id%>" class="edit"
      ><i class="fa fa-pencil" aria-hidden="true" style="color: #063146"></i>
      Edit Recipe</a
    >
    <form method="POST" action="/admin/approve_post/<%- recipe._id %>?_method=PUT">
        <button type="submit" class="edit">
          <i class="fa fa-pencil" aria-hidden="true" style="color: #063146"></i>
          Approve Recipe
        </button>
      </form>
      
    <form action="/deleteRecipe/<%=recipe._id%>?_method=DELETE" method="POST">
      <i class="fa fa-trash" aria-hidden="true" style="color: #063146"></i>
      <button
        type="submit"
        style="
          border: none;
          background-color: transparent;
          text-decoration: underline solid 1px #212529;
        "
      >
        Delete Recipe
      </button>
    </form>
  </div>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/uploads/<%- recipe.image %>"
      class="img-fluid sticky-top"
      style="top: 20px"
      alt="<%- recipe.name %>"
      loading="lazy"
    />
  </div>

  <div class="col-12 col-md-8">
    <div class="row pt-4">
      <div class="col-12">
        <div class="col-12"><h1><%- recipe.name %></h1></div>
        <div class="col-12 mb-4">
          <i class="bi bi-tag"></i> <%- recipe.category %>
        </div>
        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% recipe.ingredients.forEach(function(ingredients, index){ %>
          <li class="list-group-item"><%= ingredients %></li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-12" style="white-space: pre-line">
        <h4>Cooking Instructions</h4>
        <%- recipe.description %>
      </div>
    </div>
  </div>
</div>
<% } else { %>
<p>No item found.</p>
<% } %>
